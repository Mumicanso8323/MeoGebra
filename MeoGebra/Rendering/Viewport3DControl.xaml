<UserControl x:Class="MeoGebra.Rendering.Viewport3DControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MeoGebra.Rendering"
             mc:Ignorable="d">
    <Grid>
        <Viewport3D x:Name="Viewport" ClipToBounds="True">
            <Viewport3D.Camera>
                <PerspectiveCamera x:Name="Camera"
                                   Position="12,12,12"
                                   LookDirection="-12,-12,-12"
                                   UpDirection="0,0,1"
                                   FieldOfView="45" />
            </Viewport3D.Camera>
            <ModelVisual3D>
                <ModelVisual3D.Content>
                    <DirectionalLight Color="#FFFFFF" Direction="-1,-1,-2" />
                </ModelVisual3D.Content>
            </ModelVisual3D>
            <ModelVisual3D x:Name="SurfaceModel" />
        </Viewport3D>
    </Grid>
</UserControl>
